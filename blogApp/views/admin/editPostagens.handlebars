{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
    {{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagem/edit" method="post">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" id="" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="" class="form-control" value="{{postagem.slug}}">
            <label for="descricao">Descricao: </label>
            <input type="text" name="descricao" id="" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <br>
            <label for="categoria">Categorias: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/ each }}
            </select>
            <br>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>